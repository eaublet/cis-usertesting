//- TITLE
- var pagetitle = 'Men Mobile'

//- REGULAR INCLUDES
include blocks/mixin-mobile.pug
include blocks/mixin-global.pug
include blocks/std_head.pug
include blocks/std_css.pug

body.pdp
	+nav('Free shipping for pick-up in-store & online orders of $45+')
		+buySticky("Beasien", 79.99, '/img/pdp/lintun_a.jpg')
	+heroProduct(["Women", "Footwear", "Boots"], 'beasien_a.jpg', "Beasien", 79.99)
	.container
		+colorSelector("Black Patent", [["beasien/beasien_95_SW_100.JPG", "Black Patent", true], ["beasien/beasien_98_SW_100.JPG", "Black Glitter"]])
		+sizeSelector([5, 6, 6.5, 7, 7.5, 8, 8.5, 9, 10, 10.5, 11])
		+pdpButtons
	+productDetails('beasien_b.jpg', 'beasien_c.jpg', 'beasien_social.jpg', 'klimp_1900', 344)
	.container.productDetails
		p.lead This high-heeled sandal has you covered for any occasion with a good dose of style and attitude, courtesy of three thick straps and subtle gold detailing.
		.row
			.column
				h5 Details
				ul.listDetails
					li Almond toe
					li Block heel
					li Buckle closure
			.column
				h5 Materials
				ul.listDetails
					li Upper: Leather
					li Sole: Textile
		.column
			h5 Measurements
			ul.listDetails
				li Heel Height: 4"
		hr
		+survey('Great For', 'champaign.svg', 'Date night', 64, 'dress.svg', 'Special occasion', 35, 'allday.svg', 'All-day wear', 17)
		hr
		+reviews('Reviews')
	+mixnmatch('Mix &<br/>Match', 'beasien_a.jpg', 'bag.jpg', 'Ramaswamy', 49.99, 'Black')
	h2 Similar Styles
	.grid.border-top
		.cell.single.product
			img.full(src='/img/pdp/similarWomen_1.jpg')
			.details
				.title Ramaswamy
				.price $49.99
		.cell.single.product
			img.full(src='/img/pdp/similarWomen_2.jpg')
			.details
				.title Ramaswamy
				.price $49.99
		.cell.single.product
			img.full(src='/img/pdp/similarWomen_3.jpg')
			.details
				.title Ramaswamy
				.price $49.99
		.cell.single.product
			img.full(src='/img/pdp/similarWomen_4.jpg')
			.details
				.title Ramaswamy
				.price $49.99

		
	.footer
		img(src="/img/FooterMobile.png")
	//- +overlay
	+cart({img: '/img/pdp/inCart_men1.png' , title: 'Multi-Protector' , price: '$12.99'}, {img: '/img/pdp/inCart_men2.png' , title: 'Laces' , price: '$5.99'})
	//- +checkout


	//- REGULAR SCRIPTS
	include blocks/std_scripts.pug

