mixin buySticky(productName, productPrice)
	.buySticky
		.left
			p.productName!= productName
			p.price $#{productPrice}
		.right
			a.btn.btn-gradient Select sizes


mixin nav(surnav)
	if surnav !== ''
		.surnav.mobile!= surnav
	nav.mobile
		.navContent
			.left
				.icon: img(src="./img/global/ico_search.svg")
				.icon#navBag
					img(src="./img/global/ico_bagEmpty.svg")
					#bagCount
						.count
							span 4
							span 3
							span 2
							span 1
							span 
			.middle
				.brand: img(src="./img/global/ico_brand.svg")
			.right
				.icon Menu
		if block
			block




mixin heroProduct(breadcrumb, img, productName, productPrice, saleMsg)
	.m-heroProduct
		ul.breadcrumb.no-list
			each b in breadcrumb
				li!= b
		.header.container
			.content
				h1.productName!= productName
				
			.right
				p.price $#{productPrice}
				if saleMsg
					p.saleMsg!= saleMsg

		.carousel
			.slide: img#mainImg(src="/img/pdp/" + img)
			ul.pagination.no-list
				li.active
				li
				li
				li

mixin productDetails(imgA, imgB, imgSocial, handle, likes)
	.grid.border-top
		.cell.single: img.full.padded(src='/img/pdp/' + imgA)
		.cell.single: img.full.padded(src='/img/pdp/' + imgB)
		.cell.double
			img.full(src='/img/pdp/' + imgSocial)
			.container.socialInfo
				.handle @#{handle}
				.likes
					img(src="/img/pdp/save.svg")
					span= likes

mixin survey(title, iA, tA, vA, iB, tB, vB, iC, tC, vC)
	.survey
		h2= title
		ul.surveyOptions.no-list
			li
				.icon: img(src="/img/pdp/" + iA)
				h5= tA
				span.voted #{vA}% agree
				a.btn.btn-primary.btn-small Vote
			li
				.icon: img(src="/img/pdp/" + iB)
				h5= tB
				span.voted #{vB}% agree
				a.btn.btn-primary.btn-small Vote
			li
				.icon: img(src="/img/pdp/" + iC)
				h5= tC
				span.voted #{vC}% agree
				a.btn.btn-primary.btn-small Vote

mixin reviews(title)
	.reviews
		h2 #{title}
			img(src="/img/pdp/reviews.png", width=93)
		ul.reviewsList
			li
				.left Sizing
				.right
					.low Small
					.bar
						span(style="left: 45%")
					.high Big
			li
				.left Width
				.right
					.low Narrow
					.bar
						span(style="left: 54%")
					.high Wide
			li
				.left Calf Width
				.right
					.low Narrow
					.bar
						span(style="left: 54%")
					.high Wide
		.row.gutter
			.column: a.btn.btn-primary.btn-full.btn-big Write a review
			.column: a.btn.btn-gradient.btn-full.btn-big Show all(19)


