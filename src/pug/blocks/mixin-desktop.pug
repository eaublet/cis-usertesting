mixin sizeSelectbox(sizes, desktop)
	//- .sizeOptions
	//- 	a.link.truefit.icon True Fit
	//- 	a.link View size chart
	.selectbox-wrapper
		select.size-selectbox
			option(selected disabled hidden) #{desktop ? "Select a Size" : "Size"}
			for s in sizes
				if s == 8.5 || s == 9 || s == 11
					option(value=s disabled) Size #{s} - Sold Out
				else
					option(value=s) Size #{s}



