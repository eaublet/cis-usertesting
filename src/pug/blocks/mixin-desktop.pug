mixin heroProduct(breadcrumb, img, productName, productPrice, saleMsg)
	.d-heroProduct
		ul.breadcrumb.no-list
			each b in breadcrumb
				li!= b
		.header.container
			.content
				h1.productName!= productName
				p.price $#{productPrice}
				if saleMsg
					p.saleMsg!= saleMsg
		if block
			block

mixin productDetails(imgA, imgB, imgSocial, handle, likes)
	.grid.border-top
		.cell.single: img.full.padded(src='/img/pdp/' + imgA)
		.cell.single: img.full.padded(src='/img/pdp/' + imgB)
		.cell.double
			img.full(src='/img/pdp/' + imgSocial)
			.container.socialInfo
				.handle @#{handle}
				.likes
					img(src="/img/pdp/save.svg")
					span= likes

mixin survey(title, iA, tA, vA, iB, tB, vB, iC, tC, vC)
	.survey
		h2= title
		ul.surveyOptions.no-list
			li
				.icon: img(src="/img/pdp/" + iA)
				h5= tA
				span.voted #{vA}% agree
				a.btn.btn-primary.btn-small
					.iconCheck: img(src="/img/pdp/check.svg")
					span.label Vote
			li
				.icon: img(src="/img/pdp/" + iB)
				h5= tB
				span.voted #{vB}% agree
				a.btn.btn-primary.btn-small
					.iconCheck: img(src="/img/pdp/check.svg")
					span.label Vote
			li
				.icon: img(src="/img/pdp/" + iC)
				h5= tC
				span.voted #{vC}% agree
				a.btn.btn-primary.btn-small
					.iconCheck: img(src="/img/pdp/check.svg")
					span.label Vote

