mixin buySticky(productName, productPrice, img)
	.buySticky
		.left
			.img: img(src=img)
			.details
				p.productName!= productName
				p.price $#{productPrice}
		.right
			a.btn.btn-gradient.btn-big
				.iconCheck: img(src="/img/pdp/checkW.svg")
				span.label Select a size


