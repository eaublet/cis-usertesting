		+product('IBADOCIEN', '$49.99', 'men/M03.jpg').single
		.cell.halfEmpty
		+product('Fabiano', '$79.99', 'men/M16.jpg', '/men-desktop.html').single

		+product('KUPFER', '$49.99', 'men/M02.jpg').single


		+product('NESPOLO', '$49.99', 'men/M05.jpg').tall
		.cell.double.padded-double
			img.full(src='/img/plp/men_SocialB.jpg')
			.socialInfo
				.handle @stevenblack
				.likes
					img(src="/img/pdp/save.svg")
					span 32 likes
