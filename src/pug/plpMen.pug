//- REGULAR INCLUDES
include blocks/mixin-desktop.pug
include blocks/mixin-global.pug
include blocks/std_head.pug
include blocks/std_css.pug

body.nav.desktop
	+nav('Free shipping for pick-up in-store & online orders of $45+')
		+filters('Men', 'Footwear', '123')
	.grid.desktop.plp.border-bottom.nomargin
		.cell.single.padded-double.header.noBorder
			h6 Men
			h1.big Footwear
				h6 123 Items
			a.btn.btn-gradient.btn-big#openFilters Filter +
		.cell.empty.halftexture.single.noBorder
		+product('AFILADIEN', '$49.99', 'men/M03.jpg').double
