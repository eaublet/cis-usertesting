	+loadMore('More Chelsea Boots')
	h2.title Shop by category
	.grid.thirds.border-top.desktop.border-bottom
		.cell.padded
			img.full(src='/img/glp/mfeat_A.jpg')
			a.btnLink.small.centered Shop Footwear
		.cell.padded
			img.full(src='/img/glp/mfeat_B.jpg')
			a.btnLink.small.centered Shop Bags & Backpacks
		.cell.padded
			img.full(src='/img/glp/mfeat_C.jpg')
			a.btnLink.small.centered Shop Accessories

	+utility(true)
	.footer.desktop
		img(src="/img/global/desktopFooter.png")

	//- REGULAR SCRIPTS
	include blocks/std_scripts.pug

