		.cell.double.padded-double
			img.full(src='/img/plp/men_SocialA.jpg')
			.socialInfo
				.handle @marshallwhite
				.likes
					img(src="/img/pdp/save.svg")
					span 32 likes
		+product('ERWOOD', '$49.99', 'men/M07.jpg').single
		+product('Fabiano', '$79.99', 'men/M16.jpg', '/men-desktop.html').single
		+product('FERRAWET', '$49.99', 'men/M14.jpg').single

		+product('FIAMMA', '$49.99', 'men/M11.jpg').single
